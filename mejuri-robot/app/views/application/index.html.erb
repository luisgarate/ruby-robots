<body class="">
  <div class="wrapper">

    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent  fixed-top">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <a class="navbar-brand" href="#">Stocks & Incomes Dashboard</a>
          </div>

        </div>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-4">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">attach_money</i>
                  </div>
                  <p class="card-category">Avg Order Price</p>
                  <h3 class="card-title">
                    <%= number_to_currency(@data[:order_average_price]) %>
                  </h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">date_range</i> Last 24 Hours
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="card card-stats">
                <div class="card-header card-header-success card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">store</i>
                  </div>
                  <p class="card-category">Revenue</p>
                  <h3 class="card-title"><%= number_to_currency(@data[:revenue]) %></h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">date_range</i> Last 24 Hours
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="card card-stats">
                <div class="card-header card-header-info card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">directions_car</i>
                  </div>
                  <p class="card-category">Cars sold</p>
                  <h3 class="card-title"><%= @data[:total_cars_sold] %></h3>
                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="material-icons">date_range</i> Last 24 Hours
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-12">
              <div class="card">
                <div class="card-header card-header-info">
                  <h4 class="card-title">Cars Sold</h4>
                  <p class="card-category">Last 10 cars sold</p>
                </div>
                <div class="card-body table-responsive">
                  <table class="table table-hover">
                    <thead class="text-info">
                      <th>ID</th>
                      <th>Model</th>
                      <th>Cost Price</th>
                      <th>Price</th>
                    </thead>
                    <tbody>
                      <% @data[:cars_sold].each do |car| %>
                      <tr>
                        <td><%= car.id %></td>
                        <td><%= car.model %></td>
                        <td><%= number_to_currency(car.cost_price) %></td>
                        <td><%= number_to_currency(car.price) %></td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-12">
              <div class="card">
                <div class="card-header card-header-info">
                  <h4 class="card-title">Cars Builded with no defects</h4>
                  <p class="card-category">Last 10 cars builded</p>
                </div>
                <div class="card-body table-responsive">
                  <table class="table table-hover">
                    <thead class="text-info">
                      <th>ID</th>
                      <th>Model</th>
                      <th>Cost Price</th>
                      <th>Price</th>
                    </thead>
                    <tbody>
                      <% @data[:cars_builded].each do |car| %>
                      <tr>
                        <td><%= car.id %></td>
                        <td><%= car.model %></td>
                        <td><%= number_to_currency(car.cost_price) %></td>
                        <td><%= number_to_currency(car.price) %></td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
